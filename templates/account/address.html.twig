{% extends 'base.html.twig' %}

{% block title %}Mes adresses- Movie Time
{% endblock %}

{% block content %}

	<a href="{{ path('account_address_add')}}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
	<h1>Mes adresses</h1>
	c'est dans cet espace que vous pouvez gérer vos adresses
	<hr>
	<a href="{{path('account')}}" class="btn btn-primary">Mon Compte</a>
	<hr>
	{% if app.user.adresses|length == 0 %}
		<p class="text-center">
			Vous n'avez pas encore ajouté d'adresse dans votre compte client. Pour en ajouter une, veuillez
			<a href="">cliquer ici</a>.
		</p>
	{% else %}
		<div class="row">
			{% for adress in app.user.adresses %}
				<div class="col-md-4">
					<div class="card" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ adress.name }}</h5>
							<p class="card-text">
								{{ adress.address }},<br/>
								{{ adress.postal }}
								-
								{{ adress.city }}
								-
								{{ adress.country }}
							</p>
							<a href="" class="btn btn-success">Modifier</a>
							|
							<a href="" class="btn btn-danger">Supprimer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>


	{% endif %}
{% endblock %}
